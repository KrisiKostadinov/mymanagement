<div class="col-md-6 my-4 mx-auto">
    <h2>All companies</h2>
    <div class="list-group">
        <% companies.forEach(company => { %>
            <a class="list-group-item list-group-item-action" href="/company/<%=company._id%>">
                <span><%= company.name %></span>
            </a>
        <% }) %>
    </div>
</div>