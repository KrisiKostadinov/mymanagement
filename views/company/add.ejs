<div class="col-md-6 mt-4 mx-auto">
    <% if(error) { %>
        <p><%= error %></p>
    <% } %>
    <h2>Create company</h2>
    <form action="/company/add" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" type="text" id="name" autofocus name="name">
        </div>
        <div class="form-group">
            <label for="imageUrl">Image</label>
            <input class="form-control" type="text" id="imageUrl" name="imageUrl">
        </div>
        <div class="form-group">
            <label for="phoneNumber">Phone number</label>
            <input class="form-control" type="tel" id="phoneNumber" name="phoneNumber">
        </div>
        <div class="form-group">
            <label for="tinymce-textarea">Description</label>
            <textarea class="form-control" type="text" id="tinymce-textarea" name="description"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Create company</button>
    </form>
</div>