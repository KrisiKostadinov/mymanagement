<div class="col-md-6 mt-4 mx-auto">
    <% if(error) { %>
        <p><%= error %></p>
    <% } %>
    <form action="/company/edit/<%=company._id%>" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" type="text" id="name" autofocus value="<%=company.name%>" name="name">
        </div>
        <div class="form-group">
            <label for="imageUrl">Image</label>
            <input class="form-control" type="text" id="imageUrl" value="<%=company.imageUrl%>" name="imageUrl">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" type="text" id="tinymce-textarea" name="description"></textarea>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="hidden" id="info-textarea" value="<%=company.description%>">
        </div>
        <div class="form-group">
            <label for="phoneNumber">Phone number</label>
            <input class="form-control" type="tel" id="phoneNumber" value="<%=company.phoneNumber%>" name="phoneNumber">
        </div>
        <button type="submit" class="btn btn-primary">Update company</button>
    </form>
</div>

<script>
    document.getElementById('tinymce-textarea').innerHTML = document.getElementById('info-textarea').value;
</script>