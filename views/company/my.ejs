<% if(locals.messages.success) { %>
    <div class="alert alert-success">
        <%= locals.messages.success %>
        <strong>
            <p>Please, press the exit button and log in again, for all changes to be applied!</p>
        </strong>
    </div>
<% } %>
<div class="col-md-6 my-4 mx-auto">
    <h2>My companies</h2>
    <% companies.forEach(company => { %>
        <a class="list-group-item list-group-item-action" href="/company/<%=company._id%>"><%= company.name %></a>
        <% if(user.claim === 'boss') { %>
            <a href="/company/candidations/<%=company._id%>">Show candidations</a>
        <% } %>
    <% }) %>
</div>