<div class="col-md-6 my-4 mx-auto">
    <h2>My companies</h2>
    <% companies.forEach(company => { %>
        <a class="list-group-item list-group-item-action" href="/company/<%=company._id%>"><%= company.name %></a>
        <% if(user.claim === 'boss') { %>
            <a href="/company/candidations/<%=company._id%>">Show candidations</a>
        <% } %>
    <% }) %>
</div>