<form action="/company/<%=company._id%>?_method=DELETE" method="POST">
    <label for="name">Name</label>
    <input type="text" id="name" autofocus value="<%=company.name%>" name="name" readonly>
    <label for="imageUrl">Image</label>
    <input type="text" id="imageUrl" value="<%=company.imageUrl%>" name="imageUrl" readonly>
    <label for="phoneNumber">Phone number</label>
    <input type="number" id="phoneNumber" value="<%=company.phoneNumber%>" name="phoneNumber" readonly>
    <button type="submit">Delete company</button>
</form>