<div class="col-md-4 mx-auto my-4">
    <form action="/company/<%=company._id%>?_method=DELETE" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" type="text" id="name" autofocus value="<%=company.name%>" name="name" readonly>
        </div>
        <div class="form-group">
            <label for="imageUrl">Image</label>
            <input class="form-control" type="text" id="imageUrl" value="<%=company.imageUrl%>" name="imageUrl" readonly>
        </div>
        <div class="form-group">
            <label for="phoneNumber">Phone number</label>
            <input class="form-control" type="number" id="phoneNumber" value="<%=company.phoneNumber%>" name="phoneNumber" readonly>
        </div>
        <button type="submit" class="btn btn-danger">Delete company</button>
    </form>
</div>