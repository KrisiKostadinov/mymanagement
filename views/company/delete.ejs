<div class="col-md-4 mx-auto text-center">
    <h2>All workers</h2>
    <ul class="list-group">
        <% if(workers.length > 0) { %>
        <% workers.forEach(worker => { %>
        <li class="list-group-item"><%= worker.fullName %></li>
        <% }) %>
        <% } else { %>
            <div class="alert alert-info">
                No workers in this company
            </div>
        <% } %>
    </ul>
    <div class="dropdown-divider"></div>
</div>
<div class="col-md-4 mx-auto my-4">
    <form action="/company/<%=company._id%>?_method=DELETE" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" type="text" id="name" autofocus value="<%=company.name%>" name="name" readonly>
        </div>
        <div class="form-group">
            <label for="imageUrl">Image</label>
            <input class="form-control" type="text" id="imageUrl" value="<%=company.imageUrl%>" name="imageUrl"
                readonly>
        </div>
        <div class="form-group">
            <label for="phoneNumber">Phone number</label>
            <input class="form-control" type="number" id="phoneNumber" value="<%=company.phoneNumber%>"
                name="phoneNumber" readonly>
        </div>
        <button type="submit" class="btn btn-danger">Delete company</button>
    </form>
</div>