<div id="success" style="display: none;" class="col-md-6 mx-auto text-center">
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <h4 class="alert-heading">Well done!</h4>
        <p>The order is sended!</p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>

<table onload="checkIsExists()" class="table table-bordered text-center my-2">
    <tr>
        <th>Number</th>
        <th>Name</th>
        <th>Best days</th>
        <th>Count</th>
        <th>Actions</th>
    </tr>
    <% products.forEach((product, index) => { %>
    <tr>
        <form>
            <td><%= index + 1%></td>
            <td><%= product.name%></td>
            <td><%= product.bestDays%></td>
            <td class="w-25">
                <input class="form-control" type="number" value="0" id="<%=index%>" min="0">
            </td>
            <td>
                <button disabled data-form-id="<%=product._id%>" button class="btn" type="button"
                    onclick="checkProduct('<%=product._id%>', document.getElementById('<%=index%>').value)">Add
                    product</button>
            </td>
        </form>
    </tr>
    <% }) %>
</table>

<div class="text-center">
    <button id="data-add-order" disabled class="btn btn-primary">Send order</button>
</div>

