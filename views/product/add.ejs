<div class="col-md-6 mt-4 mx-auto">
    <% if(error) { %>
        <p><%= error %></p>
    <% } %>
    <h2>Create product</h2>
    <form action="/product/add" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" type="text" id="name" autofocus value="<%=product.name%>" name="name">
        </div>
        <div class="form-group">
            <label for="imageUrl">Image</label>
            <input class="form-control" type="text" id="imageUrl" value="<%=product.imageUrl%>" name="imageUrl">
        </div>
        <div class="form-group">
            <label for="bestDays">Best days in number</label>
            <input class="form-control" type="number" id="bestDays" value="<%=product.bestDays%>" name="bestDays">
        </div>
        <div class="form-group">
            <label for="companyId">Select company</label>
            <select class="form-control" name="companyId" id="companyId">
                <% companies.forEach(company => { %>
                    <option value="<%=company._id%>"><%= company.name%></option>    
                <% }) %>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Create product</button>
    </form>
</div>