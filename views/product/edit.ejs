<h2>Edit product</h2>
<form action="/product/edit/<%=product._id%>" method="POST">
    <label for="name">Name</label>
    <input type="text" id="name" autofocus value="<%=product.name%>" name="name">
    <label for="imageUrl">Image</label>
    <input type="text" id="imageUrl" value="<%=product.imageUrl%>" name="imageUrl">
    <label for="bestDays">Best days in number</label>
    <input type="number" id="bestDays" value="<%=product.bestDays%>" name="bestDays">
    <label for="companyId">Select company</label>
    <select name="companyId" id="companyId">
        <% companies.forEach(company => { %>
            <option value="<%=company._id%>"><%= company.name%></option>    
        <% }) %>
    </select>
    <button type="submit">Eidt product</button>
</form>